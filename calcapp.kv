<MyButton@Button>:
	#background_color: (0, 0.6, 1, 0.65)
	background_color: (1, 0, 0, 0.55)

	bold: True 

<Manager>:
	Menu: 
		id : menu 
	Dipirona :
		id : dipirona
	Paracetamol: 
		id : paracetamol 
	Prednisolona: 
		id : prednisolona
	Dexclorferinamina : 
		id : dexclorferinamina
	Hidroxizina : 
		id : hidroxizina 
	Bromoprida : 
		id : bromoprida 
	SROP : 
		id : srop 
	SROT : 
		id : srot 
	Sulfato : 
		id : sulfato 
<Menu>: 
	ScrollView:
		BoxLayout:
			id : box 
			orientation: 'vertical'
			padding: 10
			spacing: 5
			size_hint_y: (None)
			height: 900
			Label  : 
				text: 'Calculadora de doses'
				color : 0,0,0,1
				bold: True 
				size_hint_y: 3
				font_size: 20
			MyButton: 
				text : 'Amoxicilina '
			MyButton: 
				text : 'Prednisolona'
				on_release: root.manager.current = "prednisolona"
			MyButton: 
				text : 'Dexclorferinamina '
				on_release : root.manager.current = "dexclorferinamina"
			MyButton : 
				text : 'Hidroxizina'
				on_release : root.manager.current = 'hidroxizina'
			MyButton : 
				text : 'Buscopan'
			MyButton :
				text : 'Bromoprida'
				on_release : root.manager.current = "bromoprida"
			MyButton: 
				text : 'Ondansetrona'
			MyButton : 
				text : 'Dipirona'
				on_release : root.manager.current = "dipirona"
			MyButton : 
				text : 'SRO ( Não desidratado )'
				on_release : root.manager.current = "srop"
			MyButton: 
				text : 'SRO ( Desidratado )'
				on_release : root.manager.current = "srot"

			MyButton : 
				text : 'Sulfato Ferroso'
				on_release : root.manager.current = "sulfato"
			MyButton : 
				text : 'Hidantal'
			MyButton : 
				text : 'Paracetamol'
				on_release: root.manager.current = "paracetamol"
<Dipirona>:
	id : dipirona 
	name : 'dipirona'
	BoxLayout:
		orientation: 'vertical'
		padding: 30
		spacing: 20
		Label:
			text: 'Dipirona'
			size_hint_y: 0.3
			bold: True 
			color : 0,0,0,1
			font_size: 20
		Label: 
			text : '500 mg/ml'
			italic : True 
			font_size: 10
			color : 1,1,0,1
			size_hint_y: 0.1
			color : 0,0,0,1

		Image:
			source: 'drop.png'
			height: 256
		BoxLayout:
			padding : 10
			Label : 
				text :'   Peso :'
				size_hint : (1, 0.3)
				color : 0,0,0,1
			TextInput:
				id : textinput 
				multiline: False
				size_hint: (1, 0.3)
				text: '0'
				on_text : 
					root.calc_dipirona()
			Label:
				text : 'kg'
				size_hint: (0.7, 0.3)
				italic: True 
				color : 0,0,0,1
		BoxLayout : 
			size_hint_y: 0.8
			orientation: 'vertical'
			Label : 
				id : label_dose_dipirona
				text : ''
				size_hint_y: 0.3
				bold : True 
				italic: True 
				color : 0,0,0,1
			Label : 
				text : ' gotas de 6/6 horas .'
				size_hint_y: 0.3
				color : 0,0,0,1
			Label:
				text : '* maximo de 40 gotas por dose '
				size_hint_x: 1
				font_size: 9 
				italic: True 
				color : 0,0,0,1

